{
	"provider":       "ec2",
	"virtualization": "pvm",
	"credentials":    {
		// "access-key":  null,
		// "secret-key":  null,
		// "certificate": null,
		// "private-key": null,
		// "user-id":     null
	},

	"bootstrapper": {
		"workspace": "/target"
	},
	"image": {
		"name":        "debian-{system.release}-{system.architecture}-{virtualization}-{%y}{%m}{%d}",
		"description": "Debian {system.release} {system.architecture} AMI",
		"bucket":      "debian-amis"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "amd64",
		"bootloader":   "pvgrub",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"packages": {
		"mirror": "http://cloudfront.debian.net/debian"
	},
	"volume": {
		"backing": "s3",
		"partitions": {
			"type": "none",
			"root": {
				"size":       "1GiB",
				"filesystem": "ext4"
			}
		}
	}
}
